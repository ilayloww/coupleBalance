rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() { return request.auth != null; }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (
        request.auth.uid == userId || 
        (
          // Allow linking
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['partnerUid']) &&
          (!('partnerUid' in resource.data) || resource.data.partnerUid == null) &&
          request.resource.data.partnerUid == request.auth.uid
        ) ||
        (
          // Allow unlinking: Only if I am currently the partner
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['partnerUid']) &&
          resource.data.partnerUid == request.auth.uid &&
          (!('partnerUid' in request.resource.data) || request.resource.data.partnerUid == null)
        ) ||
        (
          // Allow syncing settlement day with partner
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['settlementDay']) &&
          resource.data.partnerUid == request.auth.uid
        )
      );
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }

    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && (
        resource.data.senderUid == request.auth.uid || 
        resource.data.receiverUid == request.auth.uid
      );
      allow create: if isAuthenticated() && (
        request.resource.data.senderUid == request.auth.uid || 
        request.resource.data.receiverUid == request.auth.uid
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.senderUid == request.auth.uid || 
        resource.data.receiverUid == request.auth.uid
      );
    }

    match /settlements/{settlementId} {
      allow read: if isAuthenticated() && (
        resource.data.payerUid == request.auth.uid || 
        resource.data.receiverUid == request.auth.uid
      );
      allow create: if isAuthenticated() && (
        request.resource.data.payerUid == request.auth.uid || 
        request.resource.data.receiverUid == request.auth.uid
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.payerUid == request.auth.uid || 
        resource.data.receiverUid == request.auth.uid
      );
    }
  }
}
